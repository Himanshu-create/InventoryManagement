@model IEnumerable<InventoryManagement.Models.ProductModel>

@{
    ViewData["Title"] = "Products";
}

<h1>All Products</h1>



<table class="table">
    <thead>
        <tr>
            <th>
                Product ID
            </th>
            <th>
                Product Name
            </th>
            <th>
                Product Category
            </th>
            <th>
                Brand
            </th>
            <th>
                Available
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.pid)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.pname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.pcat)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.brand)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.avl)
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.pid }) |
                </td>
            </tr>
        }
    </tbody>
</table>
