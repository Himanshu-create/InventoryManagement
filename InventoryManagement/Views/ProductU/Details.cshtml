@model InventoryManagement.Models.ProductModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>ProductModel</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Product ID
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.pid)
        </dd>
        <dt class = "col-sm-2">
            Product Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.pname)
        </dd>
        <dt class = "col-sm-2">
            Product Category
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.pcat)
        </dd>
        <dt class = "col-sm-2">
            Brand
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.brand)
        </dd>
        <dt class = "col-sm-2">
            Description
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.desc)
        </dd>
        
        <dt class = "col-sm-2">
            Stock Available
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.avl)
        </dd>
